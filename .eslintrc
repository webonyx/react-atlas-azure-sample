{
  "parser": "babel-eslint",
  "extends": [
    "react-app"
  ],
  "env": {
    "es6": true
  },
  "globals": {
    "localStorage": true,
    "fetch": true,
    "caches": true
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    // don't force es6 functions to include space before paren
    "space-before-function-paren": 0,

    // allow specifying true explicitly for boolean props
    "react/jsx-boolean-value": 0,

    "semi": ["error", "never"]
  }
}
